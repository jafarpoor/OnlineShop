@page "/ProductType"

<div id="basic" class="col-lg-12 layout-spacing">
    <div class="statbox widget box box-shadow">
        <div class="widget-header">
            <div class="row">
                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                    <h4>ورودیی متن</h4>
                </div>
            </div>
        </div>
        <div class="widget-content widget-content-area">

            <div class="row">
                <div class="col-lg-6 col-12 mx-auto">
                    <form method="post">
                        <div class="form-group">
                            <p>از ورودی <code>type="text"</code>استفاده کنید</p>
                            <label for="t-text" class="sr-only">متن</label>
                            <input id="t-text" type="text" name="txt" placeholder="متن اینجا وارد میشود" class="form-control" required="">
                            <input type="submit" value="ارسال" name="txt" class="mt-4 btn btn-primary">
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>


