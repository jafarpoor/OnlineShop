@page "/ProductType"
@inject ProductTypeServices ProductTypeServices

<div id="basic" class="col-lg-12 layout-spacing">
    <div class="statbox widget box box-shadow">
        <div class="widget-header">
            <div class="row">
                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                    <h4>گروه کالا</h4>
                </div>
            </div>
        </div>
        <div class="widget-content widget-content-area">

            <div class="row">
                <div class="col-lg-6 col-12 mx-auto">
                    <form method="post">
                        <div class="form-group">
                            <label for="t-text" class="sr-only">گروه کالا</label>
                            <InputText id="t-text" @bind-Value="GroupTypeName" placeholder="گروه کالا را وارد کنید " class="form-control"></InputText>
                            <RadzenButton Icon="save" Click=@Save class="mt-4 btn btn-primary">ذخیره </RadzenButton>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


